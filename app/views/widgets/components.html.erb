		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/traditional-create' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/account-exists' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/add-signin' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/public-profile' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/edit-profile' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/linked-accounts' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/account-info' %>
		</div>
		<div class="janrain-capture-ui capture-ui-content">
		<%= render 'widgets/components/instructions' %>
		</div>

